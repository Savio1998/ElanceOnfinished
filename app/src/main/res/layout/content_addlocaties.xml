<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/staddd"
        android:layout_gravity="center_horizontal|top"
        android:spinnerMode="dropdown"
        android:layout_marginTop="70dp"
        style="@style/AppTheme"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activiteit:"
        android:id="@+id/attractie"
        android:textColor="#000000"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/field_attractie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Schaatsen, Opendag bezoeken, etc."
        android:inputType="textMultiLine"
        android:maxLines="1"
        android:scrollHorizontally="false"
        android:layout_marginTop="5dp" />

    <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/field_naam"-->
        <!--android:layout_marginLeft="16dp"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:layout_below="@id/field_attractie"-->
        <!--android:hint="Jaap Eden Ijsbaan"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naam Plek:"
        android:id="@+id/naam"
        android:textColor="#000000"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/field_adres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field_attractienaam"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:hint="Jaap Eden Ijsbaan"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adres:"
        android:id="@+id/adres"
        android:textColor="#000000"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/field_attractienaam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field_attractie"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:hint="Radioweg 64/ Amsterdam-Oost"
        android:inputType="textMultiLine"
        android:maxLines="1"
        android:scrollHorizontally="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postcode:"
        android:id="@+id/postcode"
        android:textColor="#000000"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/field_postcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field_adres"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:hint="1089 AS"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefoonnummer:"
        android:id="@+id/tel"
        android:textColor="#000000"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/field_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field_postcode"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:hint="036-3456789"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thema:"
        android:id="@+id/thema"
        android:textColor="#000000"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/field_thema"
        android:layout_gravity="center_horizontal"
        android:hint="Gezonde levensstijl / Talentontwikkeling"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Omschrijving:"
        android:id="@+id/omschrijving"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field_tel"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/field_omschrijving"
        android:hint="Omschrijving activiteit/openingstijden"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voeg toe"
        android:id="@+id/buttonAdd"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/staddd"
        android:layout_marginBottom="53dp"
        android:visibility="visible"
        android:background="#f1a1c4"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp" />

</LinearLayout>